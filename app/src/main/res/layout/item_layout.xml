<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginLeft="5dp"
                android:id="@+id/appointment"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:background="#FFEA00"
                android:layout_height="100dp">
    <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/close_button"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="#FFFFFF"
                android:src="@android:drawable/ic_notification_clear_all"/>

        <ImageView
                android:layout_width="100dp"
                android:id="@+id/image"
                android:layout_height="match_parent"

        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="120dp"
                android:text="Afro Hair Cut"
                android:id="@+id/textTreatment"
                android:textSize="20dp"
                android:textColor="#000000"
                android:paddingTop="5dp"
        />
        <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="120dp"
                android:layout_below="@+id/textTreatment"
                android:paddingTop="2dp"
                android:textSize="12dp"
                android:textColor="#000000"
                android:id="@+id/textDate"
                android:text="Date: 12.5.2015"
        />
        <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:paddingTop="2dp"
                android:textSize="12dp"
                android:textColor="#000000"
                android:id="@+id/textTime"
                android:text="Time: 23:12"
                android:layout_below="@+id/textTreatment" android:layout_toRightOf="@+id/textStatus"
                android:layout_toEndOf="@+id/textStatus"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="120dp"
                android:layout_below="@+id/textDate"
                android:textSize="15dp"
                android:textColor="#000000"
                android:id="@+id/textEmployee"
                android:text="Bob Lobster"
        />
        <TextView
                android:layout_width="50dp"
                android:id="@+id/textSt"
                android:layout_height="30dp"
                android:layout_marginLeft="120dp"
                android:layout_below="@+id/textEmployee"
                android:textColor="#000000"
                android:textSize="13dp"
                android:text="Status :"
        />
        <TextView
                android:layout_width="70dp"
                android:id="@+id/textStatus"
                android:layout_height="30dp"
                android:textColor="#FFEA00"
                android:textSize="13dp"
                android:text="Pending"
                android:layout_below="@+id/textEmployee" android:layout_toRightOf="@+id/textSt"
                android:layout_toEndOf="@+id/textSt"/>
        <TextView
                android:layout_width="100dp"
                android:id="@+id/textPrice"
                android:layout_height="30dp"
                android:textColor="#000000"
                android:textSize="13dp"
                android:text="Price: $12.00"
                android:layout_below="@+id/textEmployee" android:layout_toRightOf="@+id/textSt"
                android:layout_toEndOf="@+id/textStatus"/>
    </RelativeLayout>

</RelativeLayout>